<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back_ground"
    android:orientation="vertical">

    <TextSwitcher
        android:id="@+id/textswitcher"
        android:layout_width="360dp"
        android:layout_height="400dp"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/btnext"
        android:layout_alignEnd="@+id/btnext" />

    <Button
        android:id="@+id/btback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_alignBaseline="@+id/btnext"
        android:layout_alignBottom="@+id/btnext"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:background="@layout/layout_botao_back" />

    <Button
        android:id="@+id/btnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@layout/layout_botao_next" />

</RelativeLayout>