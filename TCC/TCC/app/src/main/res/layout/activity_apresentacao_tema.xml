<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarApresentacaoTema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageView
        android:src="@drawable/reclamante"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:id="@+id/imageView"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/btback_apptema"
        android:layout_alignParentStart="true" />

    <ImageView
        android:src="@drawable/balao"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp"
        android:id="@+id/imageView2" />

    <Button
        android:id="@+id/btback_apptema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="back"
        android:layout_marginStart="13dp"
        android:layout_alignBaseline="@+id/btnext_apptema"
        android:layout_alignBottom="@+id/btnext_apptema"
        android:layout_alignParentStart="true"
        android:background="@layout/layout_botao_back"/>

    <Button
        android:id="@+id/btnext_apptema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@layout/layout_botao_next" />

    <TextSwitcher
        android:id="@+id/textswitcher_apptema"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="70dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_marginBottom="44dp" />

</RelativeLayout>